    <div class="file-container">
        <div class="file-item">
            <div class="file-name">list.pdf</div>
            <div class="buttons">
                <button class="start-button" onclick="startExam('list.pdf')">시험 시작!</button>
                <button class="recommend-button" id="recommendButton1" onclick="recommend(1)">추천</button>
                <span class="recommend-count" id="count1">0</span>
            </div>
            
            
        </div>
        <div class="file-item">
            <div class="file-name">queue.pdf</div>
            <div class="buttons">
                <button class="start-button" onclick="startExam('queue.pdf')">시험 시작!</button>
                <button class="recommend-button" id="recommendButton2" onclick="recommend(2)">추천</button>
